<%- include ../../partials/dashHeader.ejs %>
<%- include ../../partials/dashPage.ejs %>


<h1>adicionar novo curso</h1>

<div class="card-container">
    <form class="form-container" method="POST" action="/dashboard/courses/save">

        <fieldset>
            <h2>informações gerais</h2>
            <label for="">nome do curso</label>
            <input type="text" class="input-general" name="title">
            <span class="alert-error">Você precisa preencher o nome</span>

            <label for="">linha fina do curso</label>
            <input type="text" class="input-general" name="descCourse">
            <span class="alert-error">Você precisa preencher a linha fina</span>

            <label for="">descrição do curso</label>
            <textarea type="text" class="input-general article" name="bodyCourse" id="tinyeditor"></textarea>
            <span class="alert-error">Você precisa preencher a descrição</span>

            <div class="img-container-select">
                <label for="">capa do curso</label>
                <div>
                    <img src="/img/dashboard/picture.png" alt="" class="img-selected">
                    <input type="file" accept="image/png, image/jpeg" onchange="mudar(this)" class="input-general file" name="imgCourse">
                    <span class="alert-error">Você precisa selecionar um arquivo</span>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <h2>destaque</h2>
            <label for="">descrição do destaque</label>
            <textarea type="text" class="input-general textarea" name="featured" id="tinyeditor"></textarea>
            <span class="alert-error">Você precisa preencher a descrição</span>

            <div class="img-container-select">
                <label for="">imagem de fundo destaque</label>
                <div>
                    <img src="/img/dashboard/picture.png" alt="" class="img-selected">
                    <input type="file" accept="image/png, image/jpeg" onchange="mudar(this)" class="input-general file" name="imgFeatured">
                    <span class="alert-error">Você precisa selecionar um arquivo</span>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <h2>impactos</h2>
            <label for="">descrição dos impactos</label>
            <textarea type="text" class="input-general textarea" name="impactDesc" id="tinyeditor"></textarea>
            <span class="alert-error">Você precisa preencher a descrição</span>

            <div class="img-container-select">
                <label for="">imagem 1</label>
                <div>
                    <img src="/img/dashboard/picture.png" alt="" class="img-selected">
                    <input type="file" accept="image/png, image/jpeg" onchange="mudar(this)" class="input-general file" name="impactImg1">
                    <span class="alert-error">Você precisa selecionar um arquivo</span>
                </div>
            </div>

            <div class="img-container-select">
                <label for="">imagem 2</label>
                <div>
                    <img src="/img/dashboard/picture.png" alt="" class="img-selected">
                    <input type="file" accept="image/png, image/jpeg" onchange="mudar(this)" class="input-general file" name="impactImg2">
                    <span class="alert-error">Você precisa selecionar um arquivo</span>
                </div>
            </div>

            <div class="img-container-select">
                <label for="">imagem 3</label>
                <div>
                    <img src="/img/dashboard/picture.png" alt="" class="img-selected">
                    <input type="file" accept="image/png, image/jpeg" onchange="mudar(this)" class="input-general file" name="impactImg3">
                    <span class="alert-error">Você precisa selecionar um arquivo</span>
                </div>
            </div>
        </fieldset>

        <button class="btn-change btn-disabled" disabled>adicionar curso</button>
    </form>

    <a href="" class="tertiary">cancelar</a>
</div>


<script src="/js/courseValidation.js"></script>
<script src="/tinymce/tinymce.min.js"></script>
<script src="/js/tinyMce.js"></script>
<%- include ../../partials/dashFooter.ejs %>
