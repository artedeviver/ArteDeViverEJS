<%- include ../partials/header.ejs %>

<body>

    <!-- nav-bar -->
    <%- include ../partials/navbar.ejs %>

    <main class="main-course">
        <section>
            <img src="/uploads/<%= courses.imgCourse %>" alt="Imagem de crianÃ§as desenhando na escola" class="img-top">


            <div class="title-container">
                <div class="principal-title-container">
                    <h1>
                        <%= courses.title%>
                    </h1>
                </div>

                <div class="description-title">
                    <p><%- courses.descCourse%></p>
                </div>
            </div>

            <article>
                <p><%- courses.bodyCourse%></p>
            </article>

            <div class="testimonial">
                <div class="report">
                    <p><%= courses.featured%></p>
                    <p class="testimonial-img-background"><%= courses.imgFeatured %></p>
                </div>
            </div>

        </section>


        <!-- relacionados -->
        <section class="impact">
            <h2 class="section-title">impactos</h2>

            <p><%= courses.impactDesc%></p>

            <div class="impact-container">
                <div>
                    <img src="/uploads/<%= courses.impactImg1 %>" alt="">
                </div>

                <div>
                    <img src="/uploads/<%= courses.impactImg1 %>" alt="">
                </div>

                <div>
                    <img src="/uploads/<%= courses.impactImg3 %>" alt="">
                </div>
            </div>

        </section>

    </main>

    <%- include ../partials/footer.ejs %>



    <script>
        let backgroundText = document.querySelector('.testimonial-img-background').innerText
        let backgroundImg = document.querySelector('.testimonial')

        window.onload = function(){
            backgroundImg.style.background = `url(/uploads/${backgroundText})`
            backgroundImg.style.backgroundSize = 'cover'
        }
    </script>